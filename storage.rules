rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Company files - only company members can access
    match /companies/{companyId}/{allPaths=**} {
      allow read: if request.auth != null
        && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      allow write: if request.auth != null
        && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.companyId == companyId
        && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
